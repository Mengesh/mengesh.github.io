---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AboutContent, {frontmatter} from "@/content/about.md";

---
<BaseLayout
  title="Astro Shadcn UI Template"
  description="This template helps you build apps with Astro, Tailwind CSS, and Shadcn UI."
>
  <section class="w-full"> <!-- Removed container to allow full width -->
    <div class="flex flex-col w-full"> <!-- Make flex direction column -->

      <div class="w-full m-0 p-5">
        <h3 class="uppercase text-left text-6xl font-bold">{frontmatter.title}</h3>
        <article class="prose max-w-4xl py-8">
          <AboutContent />
        </article>
      </div>
    </div>
  </section>
</BaseLayout>
